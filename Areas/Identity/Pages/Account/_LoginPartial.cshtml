@using Microsoft.AspNetCore.Identity
@using CoffeeShopSimulation.Models

@inject SignInManager<LoyaltyUser> SignInManager
@inject UserManager<LoyaltyUser> UserManager

<ul class="navbar-nav flex items-center space-x-4">
@if (SignInManager.IsSignedIn(User))
{
    // User is logged in
    var user = await UserManager.GetUserAsync(User);
    var points = user?.LoyaltyPoints ?? 0;

    <li class="nav-item text-gray-700 font-bold">
        Points: <span class="text-green-600">@points</span>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="text-white bg-red-600 hover:bg-red-700 font-semibold py-2 px-4 rounded-lg transition duration-300">
                Logout
            </button>
        </form>
    </li>
}
else
{
    // User is NOT logged in
    <li class="nav-item">
        <a class="text-white bg-blue-600 hover:bg-blue-700 font-semibold py-2 px-4 rounded-lg transition duration-300" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="text-gray-700 hover:text-[#A67B5B] font-semibold transition duration-300" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
