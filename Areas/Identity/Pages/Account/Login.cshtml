@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap');
    
    body {
        font-family: 'Nunito', sans-serif;
        background: linear-gradient(135deg, #FFE5D9 0%, #FFCAD4 50%, #F4ACB7 100%);
    }
    
    .login-container {
        max-width: 450px;
        margin: 4rem auto;
        background: white;
        border-radius: 30px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    
    .cute-input {
        border: 3px solid #FFCAD4;
        border-radius: 15px;
        padding: 12px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
        font-family: 'Nunito', sans-serif;
    }
    
    .cute-input:focus {
        outline: none;
        border-color: #FF6B6B;
        box-shadow: 0 0 0 4px rgba(255,107,107,0.1);
    }
    
    .cute-btn {
        background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
        border: none;
        border-radius: 25px;
        padding: 15px 30px;
        color: white;
        font-weight: 700;
        font-size: 18px;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Nunito', sans-serif;
        box-shadow: 0 4px 15px rgba(255,107,107,0.4);
    }
    
    .cute-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255,107,107,0.6);
    }
    
    .cute-link {
        color: #FF6B6B;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .cute-link:hover {
        color: #FF8E8E;
        text-decoration: underline;
    }
    
    .header-cute {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .header-cute h1 {
        font-size: 3rem;
        background: linear-gradient(135deg, #FF6B6B, #FF8E8E, #FFB6C1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 0.5rem;
    }
</style>

<div class="login-container">
    <div class="header-cute">
        <h1>☕ Welcome Back!</h1>
        <p class="text-gray-600">Sign in to continue</p>
    </div>
    
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
        
        <div class="mb-4">
            <label asp-for="Input.Email" class="form-label fw-bold mb-2" style="color: #8B4513;">📧 Email</label>
            <input asp-for="Input.Email" class="form-control cute-input w-100" autocomplete="username" aria-required="true" placeholder="your.email@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Input.Password" class="form-label fw-bold mb-2" style="color: #8B4513;">🔒 Password</label>
            <input asp-for="Input.Password" class="form-control cute-input w-100" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        
        <div class="mb-4 form-check">
            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe" style="width: 20px; height: 20px; cursor: pointer;" />
            <label class="form-check-label ms-2" for="rememberMe" asp-for="Input.RememberMe" style="cursor: pointer;">
                Remember me
            </label>
        </div>
        
        <div class="mb-4">
            <button id="login-submit" type="submit" class="cute-btn w-100">Log In 🚀</button>
        </div>
        
        <div class="text-center">
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword" class="cute-link">Forgot your password?</a>
            </p>
            <p class="mt-3">
                Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="cute-link">Register here! ✨</a>
            </p>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
